generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id  String @id @default(uuid())
  name String
  email String
  password String?
  github_token String?
  image String?
  forms Formdata[]
  liked Like[]
  ports Port[]
}

model Port{
  id  String @id @default(uuid())
  templateId String
  template Template @relation(fields: [templateId],references: [id])
  userId String
  user User @relation(fields: [userId],references: [id])
}

model Template{
  id String @id @default(uuid())
  by String
  type Type
  name String
  cover_image String
  description String
  addedAt DateTime @default(now())
  views Int
  prots Port[]
  likes Like[]
}

model Like{
  id String @id @default(uuid())
  templateId String
  template Template @relation(fields: [templateId],references: [id])
  userId String
  user User @relation(fields: [userId],references: [id])
}

model Formdata{
  id String @id @default(uuid())
  userId  String @unique
  user User @relation(fields: [userId],references: [id])
  description String
  github_url String
  linkedin_url String
  twitter_url String?
  discrod_url String?
  codeforces_url String?
  codechef_url String?
  leetcode_url String?  
  skills String[] @default([])
  projects Json[]
  experiences Json[]
}


enum Type{
  FREE
  PREMIUM
}